<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="com.mrameezraja.plugins.gps"
  version="0.0.1">

    <name>GPS</name>
    <author>Rameez Raja</author>
    <description>GPS Plugin</description>
    <license>MIT</license>

    <js-module src="www/gps.js" name="gps">
        <clobbers target="navigator.gps" />
    </js-module>

   <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="GPS">
                <param name="android-package" value="com.mrameezraja.plugins.gps.GPS"/>
            </feature>
        </config-file>

        <source-file src="src/android/GPS.java" target-dir="com/mrameezraja/plugins/gps" />
    </platform>
</plugin>
